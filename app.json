{
  "expo": {
    "name": "FitnessApp",
    "slug": "fitness-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/imgs/appIcon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fitnessapp",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to provide secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/imgs/appIcon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ]
    ]
  }
}
